# Flow Companion Configuration
# Copy this file to .env and fill in your actual values

# Anthropic API (Required)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Voyage AI for embeddings (Required)
VOYAGE_API_KEY=your-voyage-api-key

# OpenAI for Whisper transcription (Required)
OPENAI_API_KEY=your-openai-api-key

# MongoDB (Required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=flow_companion

# MCP Configuration (Optional)
# Tavily API for web search via MCP
TAVILY_API_KEY=your-tavily-api-key

# Enable MongoDB MCP server for database operations
MONGODB_MCP_ENABLED=false

# Enable experimental MCP mode (can be toggled at runtime)
MCP_MODE_ENABLED=false
